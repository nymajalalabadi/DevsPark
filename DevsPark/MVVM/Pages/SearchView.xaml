<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DevsPark.MVVM.Pages.SearchView"
             xmlns:search="clr-namespace:DevsPark.Search"
             Title="SearchView">

    <Shell.SearchHandler>
        <search:OfferSearchHandler DisplayMemberName="OfferName" Placeholder="Search Offers"
                                   ShowsResults="True" SearchBoxVisibility="Collapsible" Keyboard="Chat">

            

            <search:OfferSearchHandler.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions=".3*, .7*" RowDefinitions="*, 5">
                        <Image Grid.Column="0" Grid.Row="0" Source="{Binding Image}" />
                        <Label
                            Grid.Column="1"
                            Grid.Row="0"
                            FontSize="14"
                            HorizontalOptions="Center"
                            Text="{Binding OfferName}"
                            TextColor="White"
                            VerticalOptions="Center" />
                        <Rectangle
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Fill="#E0E0E0"/>
                    </Grid>
                </DataTemplate>
            </search:OfferSearchHandler.ItemTemplate>
            
        </search:OfferSearchHandler>
    </Shell.SearchHandler>
    
</ContentPage>